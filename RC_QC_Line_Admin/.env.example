# Application
NODE_ENV=development
PORT=3001
APP_NAME=RC_QC_Admin
APP_URL=http://localhost:3001

# Database
DB_HOST=localhost
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=your_password
DB_NAME=RC_QC_LINE
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Session
SESSION_SECRET=your-super-secret-session-key-change-this
SESSION_NAME=rc_qc_admin_session
SESSION_MAX_AGE=1800000

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_ATTEMPTS_WINDOW=900000

# File Upload
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Email (Optional)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=RC QC Admin <noreply@rcqc.com>

# Audit
AUDIT_LOG_RETENTION_DAYS=90
SOFT_DELETE_RETENTION_DAYS=30

# Localization
DEFAULT_LANGUAGE=th-TH
SUPPORTED_LANGUAGES=th-TH,en-US

# System
TIMEZONE=Asia/Bangkok
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm

# API (if needed for integration)
API_KEY=your-api-key-here
API_RATE_LIMIT=1000

# Development
DEBUG=false
SHOW_SQL=false