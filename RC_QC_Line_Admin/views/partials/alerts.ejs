<!-- Alert Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(msg => { %>
        <div class="alert-success mb-4" role="alert">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span><%= msg %></span>
            </div>
            <button type="button" class="close-alert">
                <i class="fas fa-times"></i>
            </button>
        </div>
    <% }) %>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(msg => { %>
        <div class="alert-error mb-4" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span><%= msg %></span>
            </div>
            <button type="button" class="close-alert">
                <i class="fas fa-times"></i>
            </button>
        </div>
    <% }) %>
<% } %>

<% if (error && error.length > 0) { %>
    <% error.forEach(err => { %>
        <div class="alert-error mb-4" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                <span><%= err %></span>
            </div>
            <button type="button" class="close-alert">
                <i class="fas fa-times"></i>
            </button>
        </div>
    <% }) %>
<% } %>

<style>
    .alert-success {
        @apply bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative flex items-center justify-between;
    }
    
    .alert-error {
        @apply bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative flex items-center justify-between;
    }
    
    .alert-warning {
        @apply bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-lg relative flex items-center justify-between;
    }
    
    .alert-info {
        @apply bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded-lg relative flex items-center justify-between;
    }
    
    .close-alert {
        @apply text-current opacity-50 hover:opacity-75 focus:outline-none ml-4;
    }
</style>

<script>
    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        $('.alert-success, .alert-info').fadeOut('slow', function() {
            $(this).remove();
        });
    }, 5000);
    
    // Close alert on click
    $(document).on('click', '.close-alert', function() {
        $(this).closest('[role="alert"]').fadeOut('fast', function() {
            $(this).remove();
        });
    });
</script>