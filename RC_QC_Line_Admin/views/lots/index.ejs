<%- include('../layouts/main', { 
    body: (function() { %>

<div class="container mx-auto">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                <i class="fas fa-boxes mr-2"></i><%= title %>
            </h1>
            <p class="text-gray-600 mt-2"><%= t('lots:subtitle') %></p>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <form method="GET" action="/lots" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
                <label class="form-label"><%= t('lots:list.search_placeholder') %></label>
                <input type="text" name="search" value="<%= filters.search %>" 
                    class="form-input" placeholder="<%= t('lots:list.search_placeholder') %>">
            </div>
            
            <!-- Has Images Filter -->
            <div>
                <label class="form-label"><%= t('lots:list.filter_by') %></label>
                <select name="hasImages" class="form-select">
                    <option value=""><%= t('lots:list.all_lots') %></option>
                    <option value="true" <%= filters.hasImages === 'true' ? 'selected' : '' %>><%= t('lots:list.with_images') %></option>
                    <option value="false" <%= filters.hasImages === 'false' ? 'selected' : '' %>><%= t('lots:list.without_images') %></option>
                </select>
            </div>
            
            <!-- Actions -->
            <div class="flex items-end">
                <button type="submit" class="btn btn-primary mr-2">
                    <i class="fas fa-search mr-2"></i><%= t('common:actions.search') %>
                </button>
                <a href="/lots" class="btn btn-outline">
                    <i class="fas fa-redo mr-2"></i><%= t('common:actions.reset') %>
                </a>
            </div>
        </form>
    </div>
    
    <!-- Lots Table -->
    <div class="bg-white rounded-lg shadow-md">
        <div class="table-container">
            <table class="table" id="lotsTable">
                <thead>
                    <tr>
                        <th><%= t('lots:table.lot_number') %></th>
                        <th class="text-center"><%= t('lots:table.image_count') %></th>
                        <th class="text-right"><%= t('lots:table.total_size') %></th>
                        <th><%= t('lots:table.created_date') %></th>
                        <th><%= t('lots:table.last_upload') %></th>
                        <th class="text-center"><%= t('lots:table.actions') %></th>
                    </tr>
                </thead>
                <tbody>
                    <% if (lots.length > 0) { %>
                        <% lots.forEach(lot => { %>
                            <tr>
                                <td class="font-medium">
                                    <a href="/lots/<%= lot.lot_id %>" class="text-purple-600 hover:text-purple-800">
                                        <%= lot.lot_number %>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-info">
                                        <%= formatNumber(lot.image_count) %>
                                    </span>
                                </td>
                                <td class="text-right">
                                    <%= formatFileSize(lot.total_size) %>
                                </td>
                                <td>
                                    <%= formatDate(lot.created_at) %>
                                </td>
                                <td>
                                    <% if (lot.last_upload) { %>
                                        <%= formatDateTime(lot.last_upload) %>
                                    <% } else { %>
                                        <span class="text-gray-400">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="flex items-center justify-center space-x-2">
                                        <!-- View -->
                                        <a href="/lots/<%= lot.lot_id %>" 
                                           class="text-blue-600 hover:text-blue-800"
                                           data-toggle="tooltip" title="<%= t('lots:actions.view') %>">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        
                                        <% if (isManager) { %>
                                            <!-- Edit -->
                                            <a href="/lots/<%= lot.lot_id %>/edit" 
                                               class="text-yellow-600 hover:text-yellow-800"
                                               data-toggle="tooltip" title="<%= t('lots:actions.edit') %>">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% if (lot.image_count > 0) { %>
                                            <!-- Download -->
                                            <a href="/lots/<%= lot.lot_id %>/download" 
                                               class="text-green-600 hover:text-green-800"
                                               data-toggle="tooltip" title="<%= t('lots:actions.download') %>">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% if (isAdmin) { %>
                                            <!-- Delete -->
                                            <button type="button" 
                                                    onclick="deleteLot(<%= lot.lot_id %>, '<%= lot.lot_number %>', <%= lot.image_count %>)"
                                                    class="text-red-600 hover:text-red-800"
                                                    data-toggle="tooltip" title="<%= t('lots:actions.delete') %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-8 text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-2"></i>
                                <p><%= t('common:table.no_data') %></p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <% if (totalPages > 1) { %>
            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200">
                <div class="flex flex-col sm:flex-row justify-between items-center">
                    <div class="text-sm text-gray-700 mb-2 sm:mb-0">
                        <%= t('common:table.showing') %> 
                        <%= ((pagination.page - 1) * pagination.limit) + 1 %> 
                        <%= t('common:table.to') %> 
                        <%= Math.min(pagination.page * pagination.limit, pagination.totalCount) %> 
                        <%= t('common:table.of') %> 
                        <%= pagination.totalCount %> 
                        <%= t('common:table.entries') %>
                    </div>
                    
                    <div class="flex space-x-2">
                        <% if (pagination.hasPrev) { %>
                            <a href="?page=<%= pagination.page - 1 %>&<%= new URLSearchParams(filters).toString() %>" 
                               class="px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-50">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        <% } %>
                        
                        <% for (let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.totalPages, pagination.page + 2); i++) { %>
                            <a href="?page=<%= i %>&<%= new URLSearchParams(filters).toString() %>" 
                               class="px-3 py-1 text-sm border rounded-md <%= i === pagination.page ? 'bg-purple-600 text-white border-purple-600' : 'border-gray-300 hover:bg-gray-50' %>">
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <a href="?page=<%= pagination.page + 1 %>&<%= new URLSearchParams(filters).toString() %>" 
                               class="px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-50">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% })(), 
    scripts: `
<script>
function deleteLot(lotId, lotNumber, imageCount) {
    Swal.fire({
        title: '<%= t("lots:delete.title") %>',
        html: \`<%= t("lots:delete.confirm") %><br><br>
               <strong>Lot: \${lotNumber}</strong><br>
               <%= t("lots:delete.image_count", { count: '${imageCount}' }) %><br><br>
               <span class="text-red-600"><%= t("lots:delete.warning") %></span>\`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc2626',
        cancelButtonColor: '#6b7280',
        confirmButtonText: '<%= t("lots:delete.confirm_button") %>',
        cancelButtonText: '<%= t("lots:delete.cancel_button") %>'
    }).then((result) => {
        if (result.isConfirmed) {
            Utils.showLoading('<%= t("common:messages.loading") %>');
            
            $.ajax({
                url: '/lots/' + lotId,
                method: 'DELETE',
                success: function(response) {
                    Utils.hideLoading();
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '<%= t("common:status.success") %>',
                            text: response.message,
                            timer: 2000
                        }).then(() => {
                            window.location.reload();
                        });
                    }
                },
                error: function(xhr) {
                    Utils.hideLoading();
                    Utils.error(xhr.responseJSON?.message || '<%= t("common:errors.delete_failed") %>');
                }
            });
        }
    });
}

$(document).ready(function() {
    // Initialize tooltips
    $('[data-toggle="tooltip"]').tooltip();
});
</script>
` }) %>