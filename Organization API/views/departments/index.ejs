<!-- Path: /views/departments/index.ejs -->
<%- include('../layouts/main', { body: ` 

    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h1 class="text-2xl font-semibold text-gray-900">Departments</h1>
            <p class="mt-2 text-sm text-gray-700">A list of all departments in the organization structure.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
            <a href="/departments/new" class="inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:w-auto">
                <i class="fas fa-plus mr-2"></i>
                Add Department
            </a>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="mt-6 bg-white shadow rounded-lg p-4">
        <form method="get" action="/departments" class="sm:flex sm:items-center sm:space-x-4">
            <div class="flex-1">
                <label for="search" class="sr-only">Search</label>
                <input type="text" name="search" id="search" value="<%= query.search || '' %>" 
                       placeholder="Search by code or name..." 
                       class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            </div>
            
            <div>
                <select name="company_code" id="company_filter" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option value="">All Companies</option>
                    <% companies.forEach(function(company) { %>
                        <option value="<%= company.company_code %>" <%= query.company_code === company.company_code ? 'selected' : '' %>>
                            <%= company.company_name_th %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div>
                <select name="division_code" id="division_filter" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option value="">All Divisions</option>
                    <% divisions.forEach(function(division) { %>
                        <option value="<%= division.division_code %>" 
                                <%= query.division_code === division.division_code ? 'selected' : '' %>
                                data-company="<%= division.company_code %>">
                            <%= division.division_name %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div>
                <select name="is_active" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option value="">All Status</option>
                    <option value="true" <%= query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                </select>
            </div>
            
            <div class="mt-3 sm:mt-0">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-search mr-2"></i>
                    Filter
                </button>
                <a href="/departments" class="ml-2 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-times mr-2"></i>
                    Clear
                </a>
            </div>
        </form>
    </div>
    
    <!-- Table -->
    <div class="mt-6 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                                    Department Code
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Department Name
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Division
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Company
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Branch
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Status
                                </th>
                                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white">
                            <% departments.forEach(function(dept) { %>
                                <tr>
                                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                                        <%= dept.department_code %>
                                    </td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        <%= dept.department_name %>
                                    </td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        <div>
                                            <span class="font-medium"><%= dept.division_code %></span>
                                            <% if (dept.division_name) { %>
                                                <br><span class="text-xs text-gray-400"><%= dept.division_name %></span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        <%= dept.company_name_th || dept.company_code %>
                                    </td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        <%= dept.branch_name || '-' %>
                                    </td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        <% if (dept.is_active) { %>
                                            <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                                                Active
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                                                Inactive
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                        <a href="/departments/<%= dept.department_code %>/edit" class="text-blue-600 hover:text-blue-900 mr-3">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post" action="/departments/<%= dept.department_code %>/toggle-status" class="inline-block">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="text-gray-600 hover:text-gray-900" 
                                                    onclick="return confirm('Are you sure you want to <%= dept.is_active ? 'deactivate' : 'activate' %> this department?')">
                                                <% if (dept.is_active) { %>
                                                    <i class="fas fa-toggle-on"></i> Deactivate
                                                <% } else { %>
                                                    <i class="fas fa-toggle-off"></i> Activate
                                                <% } %>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                            
                            <% if (departments.length === 0) { %>
                                <tr>
                                    <td colspan="7" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                        No departments found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    <% if (pagination.pages > 1) { %>
        <%- include('../partials/pagination', { pagination, query }) %>
    <% } %>
    
    <script>
        // Filter divisions based on selected company
        document.getElementById('company_filter').addEventListener('change', function() {
            const selectedCompany = this.value;
            const divisionSelect = document.getElementById('division_filter');
            const allOptions = divisionSelect.querySelectorAll('option');
            
            // Show/hide divisions based on company
            allOptions.forEach(function(option) {
                if (option.value === '') {
                    // Always show "All Divisions" option
                    option.style.display = '';
                } else {
                    const company = option.getAttribute('data-company');
                    if (!selectedCompany || company === selectedCompany) {
                        option.style.display = '';
                    } else {
                        option.style.display = 'none';
                    }
                }
            });
            
            // Reset division selection if current selection is hidden
            if (divisionSelect.value && divisionSelect.selectedOptions[0].style.display === 'none') {
                divisionSelect.value = '';
            }
        });
        
        // Trigger change event on page load to filter divisions
        document.getElementById('company_filter').dispatchEvent(new Event('change'));
    </script>