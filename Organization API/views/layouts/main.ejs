<!-- Path: /views/layouts/main.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Organization Management System</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-800 shadow-xl">
            <div class="p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <i class="fas fa-building mr-3"></i>
                    Org System
                </h2>
            </div>
            
            <nav class="mt-6">
                <a href="/" class="flex items-center px-6 py-3 <%= currentPath === '/' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                    <i class="fas fa-home mr-3"></i>
                    Dashboard
                </a>
                
                <a href="/companies" class="flex items-center px-6 py-3 <%= currentPath.includes('/companies') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                    <i class="fas fa-building mr-3"></i>
                    Companies
                </a>
                
                <a href="/branches" class="flex items-center px-6 py-3 <%= currentPath.includes('/branches') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                    <i class="fas fa-code-branch mr-3"></i>
                    Branches
                </a>
                
                <a href="/divisions" class="flex items-center px-6 py-3 <%= currentPath.includes('/divisions') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                    <i class="fas fa-sitemap mr-3"></i>
                    Divisions
                </a>
                
                <a href="/departments" class="flex items-center px-6 py-3 <%= currentPath.includes('/departments') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                    <i class="fas fa-users mr-3"></i>
                    Departments
                </a>
                
                <div class="mt-6 pt-6 border-t border-gray-700">
                    <a href="/api-keys" class="flex items-center px-6 py-3 <%= currentPath.includes('/api-keys') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                        <i class="fas fa-key mr-3"></i>
                        API Keys
                    </a>
                    
                    <a href="/docs" class="flex items-center px-6 py-3 <%= currentPath.includes('/docs') ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> transition-colors">
                        <i class="fas fa-book mr-3"></i>
                        API Docs
                    </a>
                </div>
            </nav>
        </aside>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-white shadow-sm">
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="flex items-center">
                        <button class="text-gray-500 hover:text-gray-700 focus:outline-none lg:hidden">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <button class="flex items-center text-sm font-medium text-gray-700 hover:text-gray-900">
                                <i class="fas fa-user-circle text-2xl mr-2"></i>
                                <span><%= user ? user.username : 'Guest' %></span>
                                <i class="fas fa-chevron-down ml-1 text-xs"></i>
                            </button>
                            
                            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden">
                                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-user mr-2"></i> Profile
                                </a>
                                <hr class="my-1">
                                <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Main Content Area -->
            <main class="flex-1 p-6">
                <!-- Flash Messages -->
                <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
                    <div class="mb-4 bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded relative" role="alert">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span><%= error %></span>
                        <button class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
                    <div class="mb-4 bg-green-50 border border-green-200 text-green-600 px-4 py-3 rounded relative" role="alert">
                        <i class="fas fa-check-circle mr-2"></i>
                        <span><%= success %></span>
                        <button class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                <% } %>
                
                <!-- Page Content -->
                <%- typeof body !== 'undefined' ? body : '' %>
            </main>
        </div>
    </div>
    
    <!-- Scripts -->
    <script>
        // Dropdown toggle
        document.addEventListener('click', function(e) {
            const dropdown = e.target.closest('.relative');
            if (dropdown) {
                const menu = dropdown.querySelector('div');
                if (e.target.closest('button')) {
                    menu.classList.toggle('hidden');
                }
            } else {
                document.querySelectorAll('.relative div').forEach(menu => {
                    menu.classList.add('hidden');
                });
            }
        });
    </script>
</body>
</html>