<!-- Path: /views/layouts/main.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Organization Management System</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom CSS -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .sidebar-item {
            transition: all 0.3s ease;
        }
        
        .sidebar-item:hover {
            transform: translateX(4px);
        }
        
        .card-hover {
            transition: all 0.3s ease;
        }
        
        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-gray-900 to-gray-800 shadow-2xl">
            <div class="p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <div class="p-2 bg-primary-600 rounded-lg mr-3">
                        <i class="fas fa-building text-white"></i>
                    </div>
                    Org System
                </h2>
                <p class="text-gray-400 text-sm mt-1">Management Portal</p>
            </div>
            
            <nav class="mt-6">
                <a href="/" class="sidebar-item flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath === '/' ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-home"></i>
                    </div>
                    <span class="ml-3 font-medium">Dashboard</span>
                </a>
                
                <div class="mt-8 px-6">
                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Organization</p>
                </div>
                
                <a href="/companies" class="sidebar-item mt-3 flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/companies') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-building"></i>
                    </div>
                    <span class="ml-3 font-medium">Companies</span>
                </a>
                
                <a href="/branches" class="sidebar-item flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/branches') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-code-branch"></i>
                    </div>
                    <span class="ml-3 font-medium">Branches</span>
                </a>
                
                <a href="/divisions" class="sidebar-item flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/divisions') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-sitemap"></i>
                    </div>
                    <span class="ml-3 font-medium">Divisions</span>
                </a>
                
                <a href="/departments" class="sidebar-item flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/departments') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-users"></i>
                    </div>
                    <span class="ml-3 font-medium">Departments</span>
                </a>
                
                <div class="mt-8 px-6">
                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">System</p>
                </div>
                
                <a href="/api-keys" class="sidebar-item mt-3 flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/api-keys') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-key"></i>
                    </div>
                    <span class="ml-3 font-medium">API Keys</span>
                </a>
                
                <a href="/docs" class="sidebar-item flex items-center px-6 py-3 <%= typeof currentPath !== 'undefined' && currentPath.includes('/docs') ? 'bg-primary-600/20 text-white border-r-4 border-primary-500' : 'text-gray-300 hover:bg-gray-700/50 hover:text-white' %> transition-all">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <i class="fas fa-book"></i>
                    </div>
                    <span class="ml-3 font-medium">Documentation</span>
                </a>
            </nav>
            
            <div class="absolute bottom-0 w-64 p-6">
                <div class="bg-gray-700/50 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-primary-600 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-white"><%= typeof user !== 'undefined' && user ? user.username : 'Admin' %></p>
                            <a href="/logout" class="text-xs text-gray-400 hover:text-white">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm">
                <div class="px-6 py-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <h1 class="text-2xl font-semibold text-gray-900">
                                <%= typeof title !== 'undefined' ? title : 'Organization Management' %>
                            </h1>
                            <nav class="flex mt-2" aria-label="Breadcrumb">
                                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                                    <li class="inline-flex items-center">
                                        <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary-600">
                                            <i class="fas fa-home mr-2"></i>
                                            Home
                                        </a>
                                    </li>
                                    <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs) { %>
                                        <% breadcrumbs.forEach(function(crumb) { %>
                                            <li>
                                                <div class="flex items-center">
                                                    <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
                                                    <a href="<%= crumb.url %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-primary-600">
                                                        <%= crumb.name %>
                                                    </a>
                                                </div>
                                            </li>
                                        <% }); %>
                                    <% } %>
                                </ol>
                            </nav>
                        </div>
                        
                        <div class="flex items-center space-x-4">
                            <button class="relative p-2 text-gray-400 hover:text-gray-600">
                                <i class="fas fa-bell"></i>
                                <span class="absolute top-0 right-0 block h-2 w-2 rounded-full bg-red-400 ring-2 ring-white"></span>
                            </button>
                            <button class="p-2 text-gray-400 hover:text-gray-600">
                                <i class="fas fa-cog"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 p-6">
                <!-- Flash Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="mb-4 bg-green-50 border-l-4 border-green-400 p-4 rounded-lg">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check-circle text-green-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-green-700">
                                    <%= success %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-lg">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-circle text-red-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">
                                    <%= error %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <!-- Dynamic Content -->
                <%- body %>
            </main>
            
            <!-- Footer -->
            <footer class="bg-white border-t border-gray-200 py-4 px-6">
                <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-600">
                        © 2025 Organization Management System. All rights reserved.
                    </p>
                    <p class="text-sm text-gray-600">
                        Version 1.0.0
                    </p>
                </div>
            </footer>
        </div>
    </div>
    
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
</body>
</html>