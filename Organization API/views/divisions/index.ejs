<!-- Path: /views/divisions/index.ejs -->
<!DOCTYPE html>
<html lang="th" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Organization Structure Management System">
    <meta name="csrf-token" content="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
    
    <title>Divisions - Organization Management</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': {
                            50: '#E6F4FB',
                            100: '#CCE9F7',
                            200: '#99D3EE',
                            300: '#66BDE6',
                            400: '#33A6DD',
                            500: '#0090D3',
                            600: '#0073A9',
                            700: '#00567F',
                            800: '#003A54',
                            900: '#001D2A',
                        },
                        'success': {
                            50: '#E8F5E7',
                            100: '#D1EBCF',
                            200: '#A3D79F',
                            300: '#75C36F',
                            400: '#47AF3F',
                            500: '#3AAA35',
                            600: '#2E882A',
                            700: '#22661F',
                            800: '#164415',
                            900: '#0B220A',
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="h-full bg-gray-50 custom-scrollbar">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-white shadow-sm border-b border-gray-200">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <h1 class="text-xl font-bold text-primary-600">
                                <i class="fas fa-building mr-2"></i>
                                Organization Management
                            </h1>
                        </div>
                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-4">
                                <a href="/dashboard" class="text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-chart-line mr-1"></i> Dashboard
                                </a>
                                <a href="/companies" class="text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-building mr-1"></i> Companies
                                </a>
                                <a href="/branches" class="text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-code-branch mr-1"></i> Branches
                                </a>
                                <a href="/divisions" class="bg-primary-50 text-primary-700 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-sitemap mr-1"></i> Divisions
                                </a>
                                <a href="/departments" class="text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-users mr-1"></i> Departments
                                </a>
                                <a href="/api-keys" class="text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 text-sm font-medium transition-colors">
                                    <i class="fas fa-key mr-1"></i> API Keys
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-4 flex items-center md:ml-6">
                            <button type="button" class="rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                                <span class="sr-only">View notifications</span>
                                <i class="fas fa-bell"></i>
                            </button>
                            <div class="ml-3 relative">
                                <a href="/docs" class="text-gray-700 hover:text-primary-600 text-sm font-medium">
                                    <i class="fas fa-book mr-1"></i> API Docs
                                </a>
                            </div>
                            <div class="ml-3 relative">
                                <a href="/logout" class="text-gray-700 hover:text-primary-600 text-sm font-medium">
                                    <i class="fas fa-sign-out-alt mr-1"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="-mr-2 flex md:hidden">
                        <button type="button" class="inline-flex items-center justify-center rounded-md bg-white p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2" id="mobile-menu-button">
                            <span class="sr-only">Open main menu</span>
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Mobile menu -->
            <div class="md:hidden hidden" id="mobile-menu">
                <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
                    <a href="/dashboard" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-chart-line mr-1"></i> Dashboard
                    </a>
                    <a href="/companies" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-building mr-1"></i> Companies
                    </a>
                    <a href="/branches" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-code-branch mr-1"></i> Branches
                    </a>
                    <a href="/divisions" class="bg-primary-50 text-primary-700 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-sitemap mr-1"></i> Divisions
                    </a>
                    <a href="/departments" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-users mr-1"></i> Departments
                    </a>
                    <a href="/api-keys" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-key mr-1"></i> API Keys
                    </a>
                    <hr class="my-2 border-gray-200">
                    <a href="/logout" class="text-gray-700 hover:bg-gray-50 block rounded-md px-3 py-2 text-base font-medium">
                        <i class="fas fa-sign-out-alt mr-1"></i> Logout
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Flash Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                <div class="alert alert-success animate-fade-in">
                    <i class="fas fa-check-circle mr-2"></i>
                    <span><%= success %></span>
                </div>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                <div class="alert alert-error animate-fade-in">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <span><%= error %></span>
                </div>
            </div>
        <% } %>
        
        <!-- Main Content -->
        <main class="py-8">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="space-y-6">
                    <!-- Page Header -->
                    <div class="bg-white shadow-sm rounded-lg p-6">
                        <div class="sm:flex sm:items-center sm:justify-between">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">Divisions</h1>
                                <p class="mt-2 text-sm text-gray-700">Manage organizational divisions across companies and branches</p>
                            </div>
                            <div class="mt-4 sm:mt-0">
                                <a href="/divisions/new" class="btn btn-primary">
                                    <i class="fas fa-plus mr-2"></i>
                                    Add New Division
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Filters Section -->
                    <div class="bg-white shadow-sm rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">
                            <i class="fas fa-filter mr-2"></i>Filters
                        </h2>
                        <form method="get" action="/divisions" class="grid grid-cols-1 gap-4 sm:grid-cols-4">
                            <div>
                                <label for="company_code" class="form-label">Company</label>
                                <select name="company_code" id="company_code" class="form-input">
                                    <option value="">All Companies</option>
                                    <% if (typeof companies !== 'undefined' && companies) { %>
                                        <% companies.forEach(company => { %>
                                            <option value="<%= company.company_code %>" 
                                                    <%= typeof query !== 'undefined' && query.company_code === company.company_code ? 'selected' : '' %>>
                                                <%= company.company_name_th %>
                                            </option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            
                            <div>
                                <label for="branch_code" class="form-label">Branch</label>
                                <select name="branch_code" id="branch_code" class="form-input">
                                    <option value="">All Branches</option>
                                    <option value="null" <%= typeof query !== 'undefined' && query.branch_code === 'null' ? 'selected' : '' %>>
                                        Company Level (No Branch)
                                    </option>
                                </select>
                            </div>
                            
                            <div>
                                <label for="is_active" class="form-label">Status</label>
                                <select name="is_active" id="is_active" class="form-input">
                                    <option value="">All Status</option>
                                    <option value="true" <%= typeof query !== 'undefined' && query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                                    <option value="false" <%= typeof query !== 'undefined' && query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                                </select>
                            </div>
                            
                            <div>
                                <label for="search" class="form-label">Search</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-search text-gray-400"></i>
                                    </div>
                                    <input type="text" 
                                           name="search" 
                                           id="search" 
                                           value="<%= typeof query !== 'undefined' && query.search || '' %>"
                                           placeholder="Search by code or name..."
                                           class="form-input pl-10">
                                </div>
                            </div>
                            
                            <div class="sm:col-span-4 flex justify-end">
                                <button type="submit" class="btn btn-ghost">
                                    <i class="fas fa-search mr-2"></i>
                                    Apply Filters
                                </button>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Divisions Table -->
                    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
                        <div class="table-responsive">
                            <div class="table-wrapper">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Division Code
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Division Name
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Company
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Branch
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Departments
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Status
                                            </th>
                                            <th scope="col" class="relative px-6 py-3">
                                                <span class="sr-only">Actions</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% if (typeof divisions !== 'undefined' && divisions.length > 0) { %>
                                            <% divisions.forEach(function(division) { %>
                                                <tr class="hover:bg-gray-50 transition-colors">
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="text-sm font-medium text-gray-900">
                                                            <%= division.division_code %>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="text-sm text-gray-900">
                                                            <%= division.division_name %>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="text-sm text-gray-500">
                                                            <%= division.company_code %> - <%= division.company_name %>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <% if (division.branch_code) { %>
                                                            <div class="text-sm text-gray-500">
                                                                <%= division.branch_code %> - <%= division.branch_name %>
                                                            </div>
                                                        <% } else { %>
                                                            <span class="badge badge-gray">
                                                                Company Level
                                                            </span>
                                                        <% } %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <% if (division.department_count > 0) { %>
                                                            <a href="/departments?division_code=<%= division.division_code %>" 
                                                               class="text-sm text-primary-600 hover:text-primary-900">
                                                                <%= division.department_count %> departments
                                                            </a>
                                                        <% } else { %>
                                                            <span class="text-sm text-gray-500">No departments</span>
                                                        <% } %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                                        <% if (division.is_active) { %>
                                                            <span class="badge badge-success">
                                                                <i class="fas fa-check-circle mr-1"></i>
                                                                Active
                                                            </span>
                                                        <% } else { %>
                                                            <span class="badge badge-gray">
                                                                <i class="fas fa-times-circle mr-1"></i>
                                                                Inactive
                                                            </span>
                                                        <% } %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                        <a href="/divisions/<%= division.division_code %>/edit" 
                                                           class="text-primary-600 hover:text-primary-900 mr-3"
                                                           title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form action="/divisions/<%= division.division_code %>/toggle-status" 
                                                              method="POST" 
                                                              class="inline">
                                                            <% if (typeof csrfToken !== 'undefined') { %>
                                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                            <% } %>
                                                            <button type="submit" 
                                                                    class="<%= division.is_active ? 'text-yellow-600 hover:text-yellow-900' : 'text-success-600 hover:text-success-900' %>" 
                                                                    title="<%= division.is_active ? 'Deactivate' : 'Activate' %>">
                                                                <i class="fas fa-power-off"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                                    No divisions found.
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Pagination -->
                    <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
                        <!-- Pagination Component -->
                        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 rounded-b-lg">
                            <!-- Mobile pagination -->
                            <div class="flex-1 flex justify-between sm:hidden">
                                <% if (pagination.hasPrev) { %>
                                    <a href="?<%= new URLSearchParams({...query, page: pagination.page - 1}).toString() %>" 
                                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Previous
                                    </a>
                                <% } %>
                                <% if (pagination.hasNext) { %>
                                    <a href="?<%= new URLSearchParams({...query, page: pagination.page + 1}).toString() %>" 
                                       class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Next
                                    </a>
                                <% } %>
                            </div>
                            
                            <!-- Desktop pagination -->
                            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                <div>
                                    <p class="text-sm text-gray-700">
                                        Showing
                                        <span class="font-medium"><%= (pagination.page - 1) * pagination.limit + 1 %></span>
                                        to
                                        <span class="font-medium"><%= Math.min(pagination.page * pagination.limit, pagination.total) %></span>
                                        of
                                        <span class="font-medium"><%= pagination.total %></span>
                                        results
                                    </p>
                                </div>
                                <div>
                                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                        <% if (pagination.page > 1) { %>
                                            <a href="?<%= new URLSearchParams({...query, page: 1}).toString() %>" 
                                               class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">First</span>
                                                <i class="fas fa-angle-double-left"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% if (pagination.hasPrev) { %>
                                            <a href="?<%= new URLSearchParams({...query, page: pagination.page - 1}).toString() %>" 
                                               class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Previous</span>
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% 
                                        const maxVisible = 7;
                                        let startPage = Math.max(1, pagination.page - Math.floor(maxVisible / 2));
                                        let endPage = Math.min(pagination.pages, startPage + maxVisible - 1);
                                        
                                        if (endPage - startPage < maxVisible - 1) {
                                            startPage = Math.max(1, endPage - maxVisible + 1);
                                        }
                                        %>
                                        
                                        <% for (let i = startPage; i <= endPage; i++) { %>
                                            <% if (i === pagination.page) { %>
                                                <span aria-current="page" 
                                                      class="z-10 bg-primary-50 border-primary-500 text-primary-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                                                    <%= i %>
                                                </span>
                                            <% } else { %>
                                                <a href="?<%= new URLSearchParams({...query, page: i}).toString() %>" 
                                                   class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                                                    <%= i %>
                                                </a>
                                            <% } %>
                                        <% } %>
                                        
                                        <% if (pagination.hasNext) { %>
                                            <a href="?<%= new URLSearchParams({...query, page: pagination.page + 1}).toString() %>" 
                                               class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Next</span>
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% if (pagination.page < pagination.pages) { %>
                                            <a href="?<%= new URLSearchParams({...query, page: pagination.pages}).toString() %>" 
                                               class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Last</span>
                                                <i class="fas fa-angle-double-right"></i>
                                            </a>
                                        <% } %>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 mt-auto">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="py-4 text-center text-sm text-gray-500">
                    <p>&copy; <%= new Date().getFullYear() %> Organization Management System. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
    
    <!-- Main JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Page specific scripts -->
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        
        // Dynamic branch loading based on company selection
        document.getElementById('company_code').addEventListener('change', function() {
            const companyCode = this.value;
            const branchSelect = document.getElementById('branch_code');
            
            // Clear existing options except the first two
            branchSelect.innerHTML = '<option value="">All Branches</option><option value="null">Company Level (No Branch)</option>';
            
            if (companyCode) {
                // Fetch branches for selected company
                fetch('/api/companies/' + companyCode + '/branches')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data) {
                            data.data.forEach(branch => {
                                const option = document.createElement('option');
                                option.value = branch.branch_code;
                                option.textContent = branch.branch_code + ' - ' + branch.branch_name;
                                if (branch.is_headquarters) {
                                    option.textContent += ' (HQ)';
                                }
                                branchSelect.appendChild(option);
                            });
                        }
                    })
                    .catch(error => console.error('Error loading branches:', error));
            }
        });
        
        // Trigger change event on page load if company is pre-selected
        if (document.getElementById('company_code').value) {
            document.getElementById('company_code').dispatchEvent(new Event('change'));
        }
    </script>
</body>
</html>