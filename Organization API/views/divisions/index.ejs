<!-- views/divisions/index.ejs -->
<%- include('../layouts/header') %>

<div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Divisions Management</h1>
                <p class="text-gray-600 mt-2">Manage organizational divisions across companies and branches</p>
            </div>
            <a href="/divisions/new" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg inline-flex items-center transition duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Division
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <form method="GET" action="/divisions" class="space-y-4 md:space-y-0 md:flex md:items-end md:space-x-4">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                <select name="company_code" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">All Companies</option>
                    <% companies.forEach(company => { %>
                        <option value="<%= company.company_code %>" <%= query.company_code === company.company_code ? 'selected' : '' %>>
                            <%= company.company_name_th %>
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Branch</label>
                <select name="branch_code" id="branchFilter" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">All Branches</option>
                    <option value="null" <%= query.branch_code === 'null' ? 'selected' : '' %>>Company Level (No Branch)</option>
                </select>
            </div>
            
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select name="is_active" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">All Status</option>
                    <option value="true" <%= query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                </select>
            </div>
            
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                <input type="text" name="search" value="<%= query.search || '' %>" 
                       placeholder="Search code or name..." 
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
            </div>
            
            <div class="flex space-x-2">
                <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    Filter
                </button>
                <a href="/divisions" class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-lg transition duration-200">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Divisions Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Division Code
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Division Name
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Company
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Branch
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Departments
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (divisions && divisions.length > 0) { %>
                        <% divisions.forEach(division => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">
                                        <%= division.division_code %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900"><%= division.division_name %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <span class="font-medium"><%= division.company_code %></span>
                                        <% if (division.company_name) { %>
                                            <br><span class="text-gray-500 text-xs"><%= division.company_name %></span>
                                        <% } %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (division.branch_code) { %>
                                        <div class="text-sm text-gray-900">
                                            <span class="font-medium"><%= division.branch_code %></span>
                                            <% if (division.branch_name) { %>
                                                <br><span class="text-gray-500 text-xs"><%= division.branch_name %></span>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        <span class="text-sm text-gray-500 italic">Company Level</span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (division.is_active) { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            Active
                                        </span>
                                    <% } else { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            Inactive
                                        </span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (division.department_count > 0) { %>
                                        <a href="/departments?division_code=<%= division.division_code %>" 
                                           class="text-sm text-blue-600 hover:text-blue-900">
                                            <%= division.department_count %> departments
                                        </a>
                                    <% } else { %>
                                        <span class="text-sm text-gray-500">No departments</span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end space-x-2">
                                        <a href="/divisions/<%= division.division_code %>/edit" 
                                           class="text-indigo-600 hover:text-indigo-900" title="Edit">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </a>
                                        <form action="/divisions/<%= division.division_code %>/toggle-status" method="POST" class="inline">
                                            <button type="submit" 
                                                    class="<%= division.is_active ? 'text-orange-600 hover:text-orange-900' : 'text-green-600 hover:text-green-900' %>" 
                                                    title="<%= division.is_active ? 'Deactivate' : 'Activate' %>">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <% if (division.is_active) { %>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                              d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                    <% } else { %>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    <% } %>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                No divisions found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <% if (pagination && pagination.pages > 1) { %>
            <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
                <div class="flex items-center justify-between">
                    <div class="flex-1 flex justify-between sm:hidden">
                        <% if (pagination.page > 1) { %>
                            <a href="?<%= new URLSearchParams({...query, page: pagination.page - 1}).toString() %>" 
                               class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Previous
                            </a>
                        <% } %>
                        <% if (pagination.page < pagination.pages) { %>
                            <a href="?<%= new URLSearchParams({...query, page: pagination.page + 1}).toString() %>" 
                               class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Next
                            </a>
                        <% } %>
                    </div>
                    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                        <div>
                            <p class="text-sm text-gray-700">
                                Showing page <span class="font-medium"><%= pagination.page %></span> of 
                                <span class="font-medium"><%= pagination.pages %></span> 
                                (Total: <span class="font-medium"><%= pagination.total %></span> divisions)
                            </p>
                        </div>
                        <div>
                            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                                <% if (pagination.page > 1) { %>
                                    <a href="?<%= new URLSearchParams({...query, page: 1}).toString() %>" 
                                       class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        First
                                    </a>
                                    <a href="?<%= new URLSearchParams({...query, page: pagination.page - 1}).toString() %>" 
                                       class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                <% } %>
                                
                                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                    <%= pagination.page %>
                                </span>
                                
                                <% if (pagination.page < pagination.pages) { %>
                                    <a href="?<%= new URLSearchParams({...query, page: pagination.page + 1}).toString() %>" 
                                       class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                    <a href="?<%= new URLSearchParams({...query, page: pagination.pages}).toString() %>" 
                                       class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        Last
                                    </a>
                                <% } %>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const companySelect = document.querySelector('select[name="company_code"]');
    const branchSelect = document.getElementById('branchFilter');
    const currentBranchCode = '<%= query.branch_code || "" %>';
    
    // Load branches when company changes
    companySelect.addEventListener('change', function() {
        const companyCode = this.value;
        branchSelect.innerHTML = '<option value="">All Branches</option><option value="null">Company Level (No Branch)</option>';
        
        if (companyCode) {
            fetch(`/api/companies/${companyCode}/branches`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data) {
                        data.data.forEach(branch => {
                            const option = document.createElement('option');
                            option.value = branch.branch_code;
                            option.textContent = `${branch.branch_code} - ${branch.branch_name}`;
                            if (branch.is_headquarters) {
                                option.textContent += ' (HQ)';
                            }
                            if (branch.branch_code === currentBranchCode) {
                                option.selected = true;
                            }
                            branchSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => console.error('Error loading branches:', error));
        }
    });
    
    // Trigger change if company is pre-selected
    if (companySelect.value) {
        companySelect.dispatchEvent(new Event('change'));
    }
});
</script>

<%- include('../layouts/footer') %>