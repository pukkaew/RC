<!-- Path: /views/branches/index.ejs -->
<%- include('../layouts/main', { 
    title: 'Branches',
    activeMenu: 'branches',
    body: ` 
    <div class="space-y-6">
        <!-- Page Header -->
        <div class="bg-white shadow-sm rounded-lg p-6">
            <div class="sm:flex sm:items-center sm:justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Branches</h1>
                    <p class="mt-2 text-sm text-gray-700">Manage all branches across your organization</p>
                </div>
                <div class="mt-4 sm:mt-0">
                    <a href="/branches/new" class="btn btn-primary">
                        <i class="fas fa-plus mr-2"></i>
                        Add New Branch
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Filters Section -->
        <div class="bg-white shadow-sm rounded-lg p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">
                <i class="fas fa-filter mr-2"></i>Filters
            </h2>
            <form method="get" action="/branches" class="grid grid-cols-1 gap-4 sm:grid-cols-4">
                <div>
                    <label for="search" class="form-label">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" 
                               name="search" 
                               id="search" 
                               value="<%= query.search || '' %>"
                               placeholder="Search by code or name..."
                               class="form-input pl-10">
                    </div>
                </div>
                
                <div>
                    <label for="company_code" class="form-label">Company</label>
                    <select name="company_code" id="company_code" class="form-input">
                        <option value="">All Companies</option>
                        <% if (typeof companies !== 'undefined' && companies) { %>
                            <% companies.forEach(function(company) { %>
                                <option value="<%= company.company_code %>" 
                                        <%= query.company_code === company.company_code ? 'selected' : '' %>>
                                    <%= company.company_name_th %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                
                <div>
                    <label for="is_headquarters" class="form-label">Type</label>
                    <select name="is_headquarters" id="is_headquarters" class="form-input">
                        <option value="">All Types</option>
                        <option value="true" <%= query.is_headquarters === 'true' ? 'selected' : '' %>>Headquarters</option>
                        <option value="false" <%= query.is_headquarters === 'false' ? 'selected' : '' %>>Branch</option>
                    </select>
                </div>
                
                <div>
                    <label for="is_active" class="form-label">Status</label>
                    <select name="is_active" id="is_active" class="form-input">
                        <option value="">All Status</option>
                        <option value="true" <%= query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                        <option value="false" <%= query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                
                <div class="sm:col-span-4 flex justify-end">
                    <button type="submit" class="btn btn-ghost">
                        <i class="fas fa-search mr-2"></i>
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>
        
        <!-- Branches Table -->
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Branch Code
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Branch Name
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Company
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Type
                                </th>
                                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (typeof branches !== 'undefined' && branches.length > 0) { %>
                                <% branches.forEach(function(branch) { %>
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= branch.branch_code %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                <%= branch.branch_name %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">