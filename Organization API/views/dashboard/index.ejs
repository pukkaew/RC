                    <i class="fas fa-sitemap text-white text-xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-cyan-50 px-6 py-3 border-t border-cyan-100">
            <a href="/divisions" class="text-sm text-cyan-600 hover:text-cyan-700 font-medium flex items-center">
                ดูรายละเอียด
                <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </div>
    
    <!-- API Usage Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover-scale">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-ruxchai-grey-500">API Calls วันนี้</p>
                    <p class="text-2xl font-bold text-ruxchai-grey-800 mt-2">
                        <%= typeof apiStats !== 'undefined' && apiStats.todayCalls ? apiStats.todayCalls.toLocaleString() : '0' %>
                    </p>
                    <p class="text-xs text-ruxchai-grey-500 mt-2">
                        จาก 10,000 calls/day
                    </p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                    <i class="fas fa-plug text-white text-xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-purple-50 px-6 py-3 border-t border-purple-100">
            <div class="w-full bg-purple-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full" style="width: <%= typeof apiStats !== 'undefined' && apiStats.todayCalls ? (apiStats.todayCalls / 100).toFixed(0) : '0' %>%"></div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
