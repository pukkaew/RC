        </div>
    </div>
    
    <!-- Total Divisions Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover-scale">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-ruxchai-grey-500">ฝ่ายทั้งหมด</p>
                    <p class="text-2xl font-bold text-ruxchai-grey-800 mt-2">
                        <%= typeof stats !== 'undefined' && stats.totalDivisions ? stats.totalDivisions : '0' %>
                    </p>
                    <div class="flex items-center mt-2">
                        <span class="w-2 h-2 bg-ruxchai-green-500 rounded-full mr-2"></span>
