<!-- Chart Scripts -->
<script>
    // Organization Structure Chart (Doughnut)
    const orgCtx = document.getElementById('orgChart').getContext('2d');
    new Chart(orgCtx, {
        type: 'doughnut',
        data: {
            labels: ['บริษัท', 'สาขา', 'ฝ่าย', 'แผนก'],
            datasets: [{
                data: [
                    <%= typeof stats !== 'undefined' && stats.totalCompanies ? stats.totalCompanies : 3 %>,
                    <%= typeof stats !== 'undefined' && stats.totalBranches ? stats.totalBranches : 12 %>,
                    <%= typeof stats !== 'undefined' && stats.totalDivisions ? stats.totalDivisions : 45 %>,
                    <%= typeof stats !== 'undefined' && stats.totalDepartments ? stats.totalDepartments : 120 %>
                ],
                backgroundColor: [
                    '#0090D3',
                    '#3AAA35',
                    '#00BCD4',
                    '#9C27B0'
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });
    
    // API Usage Chart (Line)
    const apiCtx = document.getElementById('apiChart').getContext('2d');
    new Chart(apiCtx, {
        type: 'line',
        data: {
            labels: ['จันทร์', 'อังคาร', 'พุธ', 'พฤหัส', 'ศุกร์', 'เสาร์', 'อาทิตย์'],
            datasets: [{
                label: 'API Calls',
                data: [1200, 1350, 1100, 1450, 1600, 800, 600],
                borderColor: '#0090D3',
                backgroundColor: 'rgba(0, 144, 211, 0.1)',
                tension: 0.3,
                fill: true
            }, {
                label: 'Errors',
                data: [5, 8, 3, 12, 6, 2, 1],
                borderColor: '#DC2626',
                backgroundColor: 'rgba(220, 38, 38, 0.1)',
                tension: 0.3,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>