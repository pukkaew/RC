# Application Configuration
NODE_ENV=development
PORT=3000
API_PORT=3001
APP_NAME="Organization Structure Management System"

# Database Configuration
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=OrgStructureDB
DB_USER=your_username
DB_PASSWORD=your_password
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-please-change-this
API_KEY_SECRET=your-api-key-secret-please-change-this
SESSION_SECRET=your-session-secret-please-change-this

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration (optional)
CACHE_TTL=3600

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@organization.com